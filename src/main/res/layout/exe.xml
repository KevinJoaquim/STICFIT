<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundstyle"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/Chronometre"
        android:gravity="center"
        android:textSize="30dp"
        android:textIsSelectable="true"
        android:layout_weight="1"/>

    <Chronometer
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="40dp"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_gravity="center_horizontal"
    android:id="@+id/chronometer"
    android:gravity="center_horizontal"
    android:layout_weight="1"/>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="4dp"
    android:layout_weight="1">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Start"
            android:drawableLeft="@drawable/ic_action_play"
            android:textSize="13sp"
            android:background="@drawable/buttonshape"
            android:layout_marginRight="15dip"
            android:id="@+id/Start"

             />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Stop"
            android:drawableLeft="@drawable/ic_action_stop"
            android:textSize="13sp"
            android:background="@drawable/buttonshape"
            android:id="@+id/Reset"

           />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Pause"
            android:drawableLeft="@drawable/ic_action_pause"
            android:textSize="13sp"
            android:layout_marginLeft="15dip"
            android:background="@drawable/buttonshape"
            android:id="@+id/Pause"

            />

    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
       >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textSize="13sp"
                android:background="@drawable/buttonshape"
                android:text="Série+1"
                android:id="@+id/SerieAdd"
                />


        <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="13sp"
                android:background="@drawable/buttonshape"
                android:text="Reset All"
                android:id="@+id/ResetAll"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="13sp"
                android:background="@drawable/buttonshape"
                android:text="Rep +1"
                android:id="@+id/Rep1"
                />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
           >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Séries"
                    android:id="@+id/SerieTxt"
                    android:textSize="30dp"
                    android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/nbSerie"
                android:hint="1"
                android:text="1"
                android:textSize="30dp"
                android:layout_gravity="center_horizontal" />
            </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Calories"
                    android:id="@+id/calorieTxt"
                    android:textSize="30dp"
                    android:textIsSelectable="true"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:hint="0"
                        android:id="@+id/kl"
                android:textSize="30dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
        </LinearLayout>



    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Répétitions"
            android:id="@+id/RepetitionTxt"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/nbRepet"
            android:hint="0"

            android:textSize="30dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_weight="1"
        android:weightSum="3">

        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Go !"
        android:textSize="15sp"
        android:background="@drawable/buttonshape"
        android:id="@+id/btnGo"
       />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sauvegarder et quitter"
        android:paddingLeft="5dp"
        android:textSize="13sp"
        android:background="@drawable/buttonshape"
        android:drawableRight="@drawable/ic_action_save"
        android:id="@+id/SaveAll"
        android:layout_weight="1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:background="@drawable/buttonshape"
        android:drawableRight="@drawable/ic_action_remove"
        android:text="Quitter"
        android:id="@+id/Exit"
        android:layout_weight="1" />

</LinearLayout>
    </LinearLayout>
